{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "jquery": false,
    "node": false,
    "mocha": true,
    "jasmine": true,
    "jest": true
  },
  "rules": {
    "brace-style": 2,
    "camelcase": 1,
    "comma-dangle": [0, "always-multiline"],
    "complexity": [1, 15],
    "import/no-unresolved": [0],  // Until import plugin supports webpack 2 resolveModules
    "indent": [2, 2, {"SwitchCase": 1}],
    "line-comment-position": 'off',
    "max-depth": [2, 10],
    "max-len": [1, 500, 4],
    "max-statements": [1, 30],
    "no-console": 2,
    "no-debugger": 2,
    "no-empty": 2,
    "no-multiple-empty-lines": [1, {"max": 1}],
    "no-underscore-dangle": 0,
    "no-undef": 0,
    "no-unneeded-ternary": 2,
    "no-unused-vars": 'off',   // <jsx> does not 'see' React & import { comp } in functional layout
    "no-var": 'off',           // <jsx> does not 'see' React & import { comp } in functional layout
    "no-warning-comments": 1,
    "object-curly-spacing": [2, "always"],
    "object-shorthand": 'off',
    "quotes": [2, "single"],
    "radix": 2,
    "react/jsx-no-bind": [0],
    "semi": [2, "always"],
    "spaced-comment": 2,
    "strict": [2, "never"]
  },
  "plugins": [
  ]
}
